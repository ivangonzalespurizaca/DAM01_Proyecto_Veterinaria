<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvTituloSeccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="INFORMACIÓN PERSONAL"
            android:textColor="#023E89"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_input_rounded"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:drawableTint="#9CA3AF"
            android:fontFamily="@font/montserrat"
            android:hint="Nombre Completo"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#1F2937"
            android:textColorHint="#9CA3AF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTituloSeccion" />

        <EditText
            android:id="@+id/etDni"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input_rounded"
            android:drawableStart="@drawable/ic_badge"
            android:drawablePadding="20dp"
            android:drawableTint="#9CA3AF"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:hint="DNI / Documento"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#6B7280"
            android:textColorHint="#9CA3AF"
            android:textSize="16sp"
            android:alpha="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etNombre" />

        <EditText
            android:id="@+id/etCelular"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input_rounded"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="20dp"
            android:drawableTint="#9CA3AF"
            android:fontFamily="@font/montserrat"
            android:hint="Num. Celular"
            android:inputType="phone"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#1F2937"
            android:textColorHint="#9CA3AF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etDni" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input_rounded"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="20dp"
            android:drawableTint="#9CA3AF"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:hint="Correo Electrónico"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#6B7280"
            android:textColorHint="#9CA3AF"
            android:textSize="16sp"
            android:alpha="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCelular" />

        <LinearLayout
            android:id="@+id/layoutCamposVeterinario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/etCorreo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="DETALLES PROFESIONALES"
                android:textColor="#023E89"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEspecialidad"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Especialidad"
                app:startIconDrawable="@drawable/ic_medical_services"
                app:startIconTint="#9CA3AF">

                <AutoCompleteTextView
                    android:id="@+id/actvEspecialidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSede"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Sede de trabajo"
                app:startIconDrawable="@drawable/ic_medical_services"
                app:startIconTint="#9CA3AF">

                <AutoCompleteTextView
                    android:id="@+id/actvSede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/etColegiatura"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="16sp"
                android:background="@drawable/bg_input_rounded"
                android:drawableStart="@drawable/ic_badge"
                android:drawablePadding="20dp"
                android:drawableTint="#9CA3AF"
                android:fontFamily="@font/montserrat"
                android:hint="Num. Colegiatura"
                android:paddingStart="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_button_rounded"
            android:fontFamily="@font/montserrat_bold"
            android:text="ACTUALIZAR PERFIL"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCamposVeterinario" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>